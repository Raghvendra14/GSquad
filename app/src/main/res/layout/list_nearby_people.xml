<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:layout_margin="@dimen/cardview_margin_top_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nearby_people_image_view"
            android:layout_width="@dimen/add_friends_profile_pic"
            android:layout_height="@dimen/add_friends_profile_pic"
            android:src="@drawable/no_image"
            android:layout_gravity="center"
            android:paddingTop="@dimen/image_padding_top_bottom"
            android:paddingBottom="@dimen/image_padding_top_bottom"
            android:contentDescription="@string/user_pic_label" />

        <TextView
            android:id="@+id/nearby_people_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:textAppearance="?android:textAppearance"
            android:textSize="@dimen/username_size"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/distance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:textAppearance="?android:textAppearanceSmall"
            android:textSize="@dimen/distance_size"
            android:fontFamily="sans-serif" />

        <Button
            android:id="@+id/map_launcher_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="@string/map_label"
            android:background="@color/colorAccent" />

    </LinearLayout>
</android.support.v7.widget.CardView>