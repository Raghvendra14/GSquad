<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">

    <FrameLayout
        android:id="@+id/widget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceLarge" />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingTop="@dimen/widget_top_padding"
        android:paddingBottom="@dimen/widget_bottom_padding">

        <ImageButton
            android:layout_width="@dimen/action_radio_button"
            android:layout_height="@dimen/action_radio_button"
            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/online_status_label"
            android:background="@android:color/white"
            android:paddingStart="@dimen/widget_margin_start_end"
            android:paddingEnd="@dimen/widget_margin_start_end"/>

        <TextView
            android:id="@+id/online_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/online_status"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:paddingStart="@dimen/widget_margin_start_end"
            android:paddingEnd="@dimen/widget_margin_start_end"/>

        <ImageButton
            android:layout_width="@dimen/action_radio_button"
            android:layout_height="@dimen/action_radio_button"
            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/away_status_label"
            android:background="@android:color/white"
            android:paddingStart="@dimen/widget_margin_start_end"
            android:paddingEnd="@dimen/widget_margin_start_end"/>

        <TextView
            android:id="@+id/away_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/away_status"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:paddingStart="@dimen/widget_margin_start_end"
            android:paddingEnd="@dimen/widget_margin_start_end"/>

        <ImageButton
            android:layout_width="@dimen/action_radio_button"
            android:layout_height="@dimen/action_radio_button"
            android:src="@drawable/ic_radio_button_unchecked_black_24dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/offline_status_label"
            android:background="@android:color/white"
            android:paddingStart="@dimen/widget_margin_start_end"
            android:paddingEnd="@dimen/widget_margin_start_end"/>

        <TextView
            android:id="@+id/offline_status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offline_status"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:textAppearanceMedium"
            android:paddingStart="@dimen/widget_margin_start_end"
            android:paddingEnd="@dimen/widget_margin_start_end"/>

    </LinearLayout>

</LinearLayout>